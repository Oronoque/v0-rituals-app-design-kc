{
  "name": "rituals-app-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build:shared && bun run build:backend && bun run build:frontend",
    "build:shared": "bun --filter @rituals/shared build",
    "build:backend": "bun --filter @rituals/backend build",
    "build:frontend": "bun --filter @rituals/frontend build",
    "dev": "bunx concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:shared": "bun --filter @rituals/shared dev",
    "dev:backend": "bun --filter @rituals/backend dev",
    "dev:frontend": "bun --filter @rituals/frontend dev"
  },
  "devDependencies": {
    "@types/node": "^22",
    "typescript": "^5",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.0.0"
}
