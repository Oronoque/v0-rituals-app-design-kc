{
  "name": "rituals-app-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "backend",
    "shared",
    "frontend"
  ],
  "scripts": {
    "build": "bun run build:shared && bun run build:backend && bun run build:frontend",
    "build:shared": "bun --filter @rituals/shared build",
    "build:backend": "bun --filter @rituals/backend build",
    "build:frontend": "bun --filter @rituals/frontend build",
    "start:backend": "dotenv -e .env -- bun run --elide-lines 0 --filter @rituals/backend start",
    "start:frontend": "dotenv -e .env -- bun run --elide-lines 0 --filter @rituals/frontend start",
    "start": "dotenv -e .env -- bunx concurrently -names=server,client --prefix-colors=auto \"bun run start:backend\" \"bun run start:frontend\"",
    "predev": "echo 'Running pre-dev steps...' && bun run build:shared",
    "dev:shared": "dotenv -e .env -- bun run --filter=@rituals/shared dev ",
    "dev:backend": "dotenv -e .env -- bun run --elide-lines 0 --filter=@rituals/backend dev",
    "dev:frontend": "dotenv -e .env -- bun run --elide-lines 0 --filter=@rituals/frontend dev",
    "dev": "dotenv -e .env -- bunx concurrently --names=server,client --prefix-colors=auto \"bun run dev:backend\" \"bun run dev:frontend\""
  },
  "devDependencies": {
    "@types/node": "^22",
    "typescript": "^5",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.0.0",
  "dependencies": {
    "dotenv-cli": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}
